# Edge Core Configuration
# Note: Use localhost:8081 when using socat forwarding to remote Edge Core
#       Use direct IP (e.g., ws://192.168.1.198:8081) for direct connection
IZUMA_API_BASE_URL=ws://localhost:8081
IZUMA_DEVICE_ID=your_device_id_here

# Service Configuration
SERVICE_NAME=edge-grm-service
SERVICE_VERSION=1.0.0

# Resource Configuration
RESOURCES_FILE=resources.json

# Logging Configuration
LOG_LEVEL=INFO

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# Resource Update Configuration
RESOURCE_UPDATE_INTERVAL=60

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=5
